<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--android:layout_marginTop="5dp"-->
    <!--android:layout_marginLeft="10dp"-->
    <!--android:layout_marginRight="10dp"-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.xiangmu.wyxw.viewpager.TouTiaoViewPager
            android:id="@+id/toutiao_lunbo_viewpager"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="200dp">
        </com.xiangmu.wyxw.viewpager.TouTiaoViewPager>
        <ImageView
            android:id="@+id/daohang_lunbo_yitu"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="200dp" />
        <TextView
            android:id="@+id/toutiao_lunbo_title"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textColor="#ff0000"
            android:singleLine="true"
            android:layout_alignBottom="@+id/toutiao_lunbo_viewpager"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="" />
        <TextView
            android:id="@+id/toutiao_lunboyitu_title"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textColor="#ff0000"
            android:singleLine="true"
            android:layout_alignBottom="@+id/daohang_lunbo_yitu"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="" />
        <LinearLayout
            android:layout_marginRight="20dp"
            android:id="@+id/toutitao_lunbo_ll"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/toutiao_lunbo_viewpager"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>