<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xiangmu.wyxw.activitys.PictureActivity">

    <RelativeLayout
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:background="@drawable/titlebar_background"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/loginimage_back"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/loginimage_back"
            android:layout_toRightOf="@+id/loginimage_back"
            android:text="   态度截屏"
            android:textColor="#000000"
            android:textSize="15sp" />
        <ImageButton
            android:id="@+id/loginimage_share"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@mipmap/share_alpha" />
    </RelativeLayout>

    <LinearLayout
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/titlebar"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_marginTop="3sp"
            android:layout_weight="8">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_weight="6"
                    android:layout_height="0dp"
                    android:src="@mipmap/ic_launcher" />
                <TextView
                    android:id="@+id/text"
                    android:background="@drawable/biz_screenshot_attitude_container_bg"
                    android:paddingLeft="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="老夫已经吓尿了....." />
            </LinearLayout>
            <ImageView
                android:id="@+id/imageShow"
                android:layout_margin="10sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="80sp"
                android:layout_height="80sp" />
        </RelativeLayout>
        <HorizontalScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="none">
            <LinearLayout
                android:id="@+id/parentview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <ImageView
                    android:id="@+id/image1"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:layout_width="80sp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/naodong_1" />
                <ImageView
                    android:id="@+id/image2"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:layout_width="80sp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/naodong_2" />

                <ImageView
                    android:id="@+id/image3"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:layout_width="80sp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/naodong_3" />

                <ImageView
                    android:id="@+id/image4"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:layout_width="80sp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/naodong_4" />

                <ImageView
                    android:id="@+id/image5"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:layout_width="80sp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/naodong_5" />

                <ImageView
                    android:id="@+id/image6"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:layout_width="80sp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/naodong_6" />

                <ImageView
                    android:id="@+id/image7"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:layout_width="80sp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/naodong_7" />

                <ImageView
                    android:id="@+id/image8"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:layout_width="80sp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/naodong_8" />

                <ImageView
                    android:id="@+id/image9"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:layout_width="80sp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/naodong_9" />

                <ImageView
                    android:id="@+id/image10"
                    android:onClick="onClick"
                    android:layout_width="80sp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/naodong_10" />

                <ImageView
                    android:id="@+id/image11"
                    android:onClick="onClick"
                    android:layout_width="80sp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/naodong_11" />

                <ImageView
                    android:id="@+id/image12"
                    android:onClick="onClick"
                    android:layout_width="80sp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/naodong_12" />

                <ImageView
                    android:id="@+id/image13"
                    android:onClick="onClick"
                    android:layout_width="80sp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/naodong_13" />

                <ImageView
                    android:id="@+id/image14"
                    android:onClick="onClick"
                    android:layout_width="80sp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/naodong_14" />
                <ImageView
                    android:id="@+id/image15"
                    android:onClick="onClick"
                    android:layout_width="80sp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/naodong_15" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>


</LinearLayout>
