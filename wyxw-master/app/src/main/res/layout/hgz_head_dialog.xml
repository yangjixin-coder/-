<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp">

        <ImageView
            android:id="@+id/head_photo_selector"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/head_photo_selector_bg" />

        <TextView
            android:id="@+id/photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head_photo_selector"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="照相"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/head_pic_selector"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/head_pic_selector_bg" />

        <TextView
            android:id="@+id/pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head_pic_selector"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="图片库"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">

        <ImageView
            android:id="@+id/head_selector_sina"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/head_selector_sina_bg" />

        <TextView
            android:id="@+id/sina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head_selector_sina"
            android:gravity="center"
            android:text="新浪微博"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>